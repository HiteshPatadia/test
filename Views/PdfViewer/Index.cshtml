@model pdfviewer.Controllers.DataModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="split-left">
    <div class="go-back">
        <span style="line-height: 70px; vertical-align: middle;"><a href="@Url.Action("Index", "Home")">&lt; Go back </a></span>

        <span style="display: none;float: right;line-height: 70px; vertical-align: middle;">
            <a href="@Url.Action("GetPdfByKey", "PdfViewer")?symmetricKey=@Model.Key">Download anonymous &gt; </a>


        </span>
    </div>
    <iframe src="@Url.Action("GetPdf", "PdfViewer")"
            style="width:100%;height:100%" frameborder="0">
    </iframe>
</div>
<div class="split-right">
    <iframe src="@Url.Action("GetCommentsHtml", "PdfViewer")"
            style="width:100%; height:100%;overflow:scroll;margin-left: 0px;" frameborder="0">
    </iframe>
</div>
